{
	"version": 4,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 24,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"generator": "Ninja",
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"binaryDir": "${sourceDir}/build/${presetName}",
			"installDir": "${sourceDir}/install/${presetName}",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
			"environment": {
				"VCPKG_ROOT": "./vcpkg"
			}
		},

		{
			"name": "windows",
			"inherits": "base",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			},
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": true
			}
		},

		{
			"name": "unix-like",
			"hidden": true,
			"inherits": "base",
			"condition": {
				"type": "inList",
				"string": "${hostSystemName}",
				"list": [
					"Linux",
					"Darwin"
				]
			},
			"vendor": {
				"microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
					"sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
				}
			}
		},

		{
			"name": "debug",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "release",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"WARNINGS_AS_ERRORS": true
			}
		},

		{
			"name": "asan",
			"hidden": true,
			"cacheVariables": {
				"ENABLE_SANITIZER_ADDRESS": true
			}
		},
		{
			"name": "clangtidy",
			"hidden": true,
			"cacheVariables": {
				"ENABLE_CLANG_TIDY": true
			}
		},
		{
			"name": "coverage",
			"hidden": true,
			"cacheVariables": {
				"ENABLE_COVERAGE": true
			}
		},

		{
			"name": "clang-cl",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang-cl.exe",
				"CMAKE_CXX_COMPILER": "clang-cl.exe"
			},
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"intelliSenseMode": "windows-clang-x64"
				}
			}
		},
		{
			"name": "msvc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl.exe",
				"CMAKE_CXX_COMPILER": "cl.exe"
			}
		},
		{
			"name": "clang",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},
		{
			"name": "gcc",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc",
				"CMAKE_CXX_COMPILER": "g++"
			}
		},

		{
			"name": "msvc-debug",
			"displayName": "MSVC Debug",
			"inherits": [ "windows", "msvc", "debug"]
		},
		{
			"name": "msvc-asan",
			"displayName": "MSVC ASan",
			"inherits": [ "windows", "msvc", "debug", "asan" ]
		},
		{
			"name": "clang-cl-debug",
			"displayName": "ClangCl Debug",
			"inherits": [ "windows", "clang-cl", "debug"]
		},
		{
			"name": "clang-cl-asan",
			"displayName": "ClangCl ASan",
			"inherits": [ "windows", "clang-cl", "release", "asan" ]
		},


		{
			"name": "msvc-release",
			"displayName": "MSVC Release",
			"inherits": [ "windows", "msvc", "release" ]
		},
		{
			"name": "clang-cl-release",
			"displayName": "ClangCl Release",
			"inherits": [ "windows", "clang-cl", "release" ]
		},
		{
			"name": "clang-cl-release-tidy",
			"displayName": "ClangCl Release (with clang-tidy)",
			"inherits": [ "windows", "clang-cl", "release", "clangtidy" ]
		},
		{
			"name": "clang-release",
			"displayName": "Clang Release",
			"inherits": [ "unix-like", "clang", "release" ]
		},
		{
			"name": "clang-release-tidy",
			"displayName": "Clang Release (with clang-tidy)",
			"inherits": [ "unix-like", "clang", "release", "clangtidy" ]
		},
		{
			"name": "gcc-release",
			"displayName": "Gcc Release",
			"inherits": [ "unix-like", "gcc", "release" ]
		},
		{
			"name": "gcc-debug-coverage",
			"displayName": "Gcc Debug Coverage (with coverage)",
			"inherits": [ "unix-like", "gcc", "debug", "coverage" ]
		}
	],

	"buildPresets": [
		{
			"name": "msvc-debug-verbose",
			"displayName": "verbose",
			"configurePreset": "msvc-debug",
			"verbose": true
		},
		{
			"name": "clang-cl-debug-verbose",
			"displayName": "verbose",
			"configurePreset": "clang-cl-debug",
			"verbose": true
		},
		{
			"name": "clang-cl-release-tidy-verbose",
			"displayName": "verbose",
			"configurePreset": "clang-cl-release-tidy",
			"verbose": true
		}
	],

	"testPresets": [
		{
			"name": "debug-verbose",
			"hidden": true,
			"output": {
				"outputOnFailure": true,
				"debug": true,
				"verbosity": "verbose"
			}
		},
		{
			"name": "msvc-debug-verbose",
			"configurePreset": "msvc-debug",
			"inherits": [ "debug-verbose" ]
		},
		{
			"name": "clang-cl-debug-verbose",
			"configurePreset": "clang-cl-debug",
			"inherits": [ "debug-verbose" ]
		}
	]
}
